<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_settings" />

    <Button
        android:id="@+id/btnaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnachievements"
        android:layout_alignParentStart="true"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:width="370dp"
        android:background="@drawable/btn_style2"
        android:text="Account Information" />

    <Button
        android:id="@+id/btnachievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnrate"
        android:layout_alignParentStart="true"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:width="370dp"
        android:background="@drawable/btn_style2"
        android:text="Achievements" />

    <Button
        android:id="@+id/btnrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnversion"
        android:layout_alignParentStart="true"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:width="370dp"
        android:background="@drawable/btn_style2"
        android:text="Rate Us!" />

    <Button
        android:id="@+id/btnversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="20dp"
        android:layout_marginBottom="70dp"
        android:width="370dp"
        android:background="@drawable/btn_style2"
        android:text="App Version | V 1.0.0" />


</RelativeLayout>